{
    "multipart": [
        {   "when": { "up": "true" },
            "apply": { "model": "block/end_stone_brick_wall_post" }
        },

        {   "when": { "north": "true" },
            "apply": { "model": "block/end_stone_brick_wall_side"}
        },
        {   "when": { "north": "true", "south": "false" },
            "apply": { "model": "block/end_stone_brick_wall_alt"}
        },

        {   "when": { "east": "true" },
            "apply": { "model": "block/end_stone_brick_wall_side", "y": 90}
        },
        {   "when": { "south": "true" },
            "apply": { "model": "block/end_stone_brick_wall_side", "y": 180}
        },
        {   "when": { "south": "true", "north": "false" },
            "apply": { "model": "block/end_stone_brick_wall_alt", "y": 180}
        },

        {   "when": { "west": "true" },
            "apply": { "model": "block/end_stone_brick_wall_side", "y": 270}
        }
    ]
}
