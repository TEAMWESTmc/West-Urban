{
    "multipart": [
        {   "when": { "up": "true" },
            "apply": { "model": "block/granite_wall_post" }
        },
        {   "when": { "north": "low" },
            "apply": { "model": "block/granite_wall_side", "uvlock": false }
        },
        {   "when": { "east": "low" },
            "apply": { "model": "block/granite_wall_side", "y": 90, "uvlock": false }
        },
        {   "when": { "south": "low" },
            "apply": { "model": "block/granite_wall_side", "y": 180, "uvlock": false }
        },
        {   "when": { "west": "low" },
            "apply": { "model": "block/granite_wall_side", "y": 270, "uvlock": false }
        },
        {   "when": { "north": "tall" },
            "apply": { "model": "block/granite_wall_side", "uvlock": false }
        },
        {   "when": { "east": "tall" },
            "apply": { "model": "block/granite_wall_side", "y": 90, "uvlock": false }
        },
        {   "when": { "south": "tall" },
            "apply": { "model": "block/granite_wall_side", "y": 180, "uvlock": false }
        },
        {   "when": { "west": "tall" },
            "apply": { "model": "block/granite_wall_side", "y": 270, "uvlock": false }
        }
    ]
}
