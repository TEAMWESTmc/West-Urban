{
    "multipart": [
        {"apply": { "model": "block/red_nether_brick_wall_post" }},
        {   "when": { "north": "low" },
            "apply": { "model": "block/red_nether_brick_wall_side"}
        },
        {   "when": { "east": "low" },
            "apply": { "model": "block/red_nether_brick_wall_side", "y": 90}
        },
        {   "when": { "south": "low" },
            "apply": { "model": "block/red_nether_brick_wall_side", "y": 180, "uvlock": false}
        },
        {   "when": { "west": "low" },
            "apply": { "model": "block/red_nether_brick_wall_side", "y": 270, "uvlock": false}
        },
        {   "when": { "north": "tall" },
            "apply": { "model": "block/red_nether_brick_wall_side"}
        },
        {   "when": { "east": "tall" },
            "apply": { "model": "block/red_nether_brick_wall_side", "y": 90}
        },
        {   "when": { "south": "tall" },
            "apply": { "model": "block/red_nether_brick_wall_side", "y": 180, "uvlock": false}
        },
        {   "when": { "west": "tall" },
            "apply": { "model": "block/red_nether_brick_wall_side", "y": 270, "uvlock": false}
        }

    ]
}
